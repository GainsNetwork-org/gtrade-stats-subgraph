specVersion: 0.0.4
description: >-
  gTrade point data
schema:
  file: ./schema.gql
features:
  - grafting
graft:
  base: {{graft.base}}
  block: {{graft.block}}  
dataSources:
  - kind: ethereum
    name: GNSMultiCollatDiamond
    network: '{{network}}'
    source:
      address: '{{GNSMultiCollatDiamond.address}}'
      abi: GNSMultiCollatDiamond
      startBlock: {{GNSMultiCollatDiamond.startBlock}}
    mapping:
      kind: ethereum/events
      apiVersion: 0.0.7
      language: wasm/assemblyscript
      entities:
        - AggregateTradingStats
      abis:
        - name: GNSMultiCollatDiamond
          file: ./abis/GNSMultiCollatDiamond.json
      eventHandlers:
        - event: MarketExecuted((address,uint32),indexed address,indexed uint32,(address,uint32,uint16,uint24,bool,bool,uint8,uint8,uint120,uint64,uint64,uint64,bool,uint160,uint24),bool,uint256,uint256,uint256,(uint256,int256,int256,int256,int256,uint64),int256,uint256,uint256)
          handler: handleMarketExecuted
        - event: LimitExecuted((address,uint32),indexed address,indexed uint32,indexed uint32,(address,uint32,uint16,uint24,bool,bool,uint8,uint8,uint120,uint64,uint64,uint64,bool,uint160,uint24),address,uint8,uint256,uint256,uint256,(uint256,int256,int256,int256,int256,uint64),int256,uint256,uint256,bool)
          handler: handleLimitExecuted
        - event: HoldingFeesChargedOnTrade(indexed uint8,indexed address,indexed uint32,uint64,(int256,uint256,uint256,int256),uint256,uint256,uint256,int256)
          handler: handleHoldingFeeCharged
          receipt: true
        - event: HoldingFeesRealizedOnTrade(indexed uint8,indexed address,indexed uint32,uint64,(int256,uint256,uint256,int256),int256)
          handler: handleHoldingFeeRealized
          receipt: true
        - event: GovFeeCharged(indexed address,indexed uint8,uint256)
          handler: handleGovFeeCharged
          receipt: true
        - event: ReferralFeeCharged(indexed address,indexed uint8,uint256)
          handler: handleReferralFeeCharged
        - event: TriggerFeeCharged(indexed address,indexed uint8,uint256)
          handler: handleTriggerFeeCharged
        - event: GnsOtcFeeCharged(indexed address,indexed uint8,uint256)
          handler: handleStakerFeeCharged
        - event: GTokenFeeCharged(indexed address,indexed uint8,uint256)
          handler: handleLpFeeCharged
          receipt: true
        - event: PositionSizeDecreaseExecuted((address,uint32),uint8,indexed uint8,indexed address,uint256,indexed uint256,bool,uint256,uint256,uint256,uint256,(bool,uint256,uint256,uint256,uint256,(uint256,int256,int256,int256,int256,uint64),int256,int256,int256,int256,uint256,uint256,int256,int256,uint120,uint24))
          handler: handleTradeDecreased
        - event: PositionSizeIncreaseExecuted((address,uint32),uint8,indexed uint8,indexed address,uint256,indexed uint256,bool,uint256,uint256,uint256,uint256,(uint256,uint256,uint256,uint256,uint256,(uint256,int256,int256,int256,int256,uint64),int256,uint256,uint256,uint256,uint256,uint256,bool,uint256,uint256,uint256))
          handler: handleTradeIncreased             
      file: ./src/handlers/GNSTradingCallbacks/index.ts      
